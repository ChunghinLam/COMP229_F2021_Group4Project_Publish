<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <img src="" alt="">
            <h1><%= title %></h1>
            <div class="col-md-12 mt-5 mb-1">
                <a href="/add" class="btn btn-primary" role="button">
                    <i class="fas fa-plus-circle"></i> Create a Survey
                </a>
            </div>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-8">Survey Name</th>
                    <th class="text-center col-4">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for (let count = 0; count < SurveyList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-8"><%= SurveyList[count].title %></td>
                        <td class="text-center col-2">
                            <a href="/edit/<%= SurveyList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-2">
                            <a href="/delete/<%= SurveyList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>
  
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
